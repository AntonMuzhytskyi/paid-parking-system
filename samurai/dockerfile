# Этап 1: Сборка
FROM eclipse-temurin:25-jdk-alpine AS builder

WORKDIR /app

# Копируем Maven Wrapper и pom.xml сначала (для кэширования зависимостей)
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

# Делаем mvnw исполняемым и скачиваем зависимости
RUN chmod +x ./mvnw
RUN ./mvnw dependency:go-offline -B

# Копируем исходный код
COPY src ./src

# Собираем JAR (skip tests для скорости)
RUN ./mvnw clean package -DskipTests -B

# Этап 2: Запуск (лёгкий образ)
FROM eclipse-temurin:25-jre-alpine

WORKDIR /app

# Копируем только JAR из builder
COPY --from=builder /app/target/*.jar app.jar

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "app.jar"]